{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container-fluid account">
    <div class="img-account">
        <img src="{{ asset('/images/bkg5.jpg') }}" alt="image-accueil" class="img-fluid img-container">
    </div>
    <div class="ico-form">
        <div class="container container-colored no-arrow pt-5 pb-5">
            <h1 class="text-center">Cr√©er un compte</h1>
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-lg btn-primary mt-3">Inscription</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}